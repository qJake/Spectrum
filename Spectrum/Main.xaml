<Window x:Class="Spectrum.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spectrum" Height="500" Width="900">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal">
            <Image Source="Resources/huelogo.png" Cursor="None" Width="123" Height="87" Panel.ZIndex="2" />

            <TextBlock x:Name="NavNow" Text="Now" Style="{StaticResource Text-Header-MainNav}" />
            <TextBlock x:Name="NavSchedule" Text="Schedule" Style="{StaticResource Text-Header-MainNav}" />
            <TextBlock x:Name="NavAutomate" Text="Automate" Style="{StaticResource Text-Header-MainNav}" />
            <TextBlock x:Name="NavConfigure" Text="Configure" Style="{StaticResource Text-Header-MainNav}" />
        </StackPanel>
        
        <ContentControl x:Name="ControlContainer" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        
    </Grid>
</Window>
